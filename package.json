{
    "name": "discord-bot",
    "version": "1.0.0",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "tsx watch index.ts",
        "start": "node dist/index.js",
        "build": "tsc -p tsconfig.json",
        "register": "tsx tools/registerSlash.ts",
        "clear": "tsx tools/clearCommands.ts",
        "control": "powershell -ExecutionPolicy Bypass -File scripts/bot-control.ps1",
        "bot:start": "powershell -ExecutionPolicy Bypass -File scripts/bot-control.ps1 -Action start",
        "bot:stop": "powershell -ExecutionPolicy Bypass -File scripts/bot-control.ps1 -Action stop",
        "bot:status": "powershell -ExecutionPolicy Bypass -File scripts/bot-control.ps1 -Action status"
    },
    "engines": {
        "node": ">=18.17"
    },
    "dependencies": {
        "discord.js": "^14.22.1",
        "dotenv": "^17.2.3",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@types/node": "^24.6.1",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3"
    }
}